@page
@model EasyBook.Pages.room6Model
<script src="~/js/index.js"></script>
@{
}
<div class="text-center">
    <h1>Mødelokale 6 </h1>
	<img src="~/photos/lokal6.jpg" alt="room6" style="max-width: 90%; height: auto; display: block; margin: auto; max-height: 40%;" />
    <p>  Rum 6 har en whiteboardtavle , en projektor og dens kapacitet er 30 personer.</p>
</div>

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reserver Mødelokale</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2>Mødelokale 6</h2>
        <button class="btn btn-success" id="reserverBtn">Reserver Mødelokale 6</button>
        <button class="btn btn-danger mt-2" id="annullerBtn" style="display: none;">Annuller Reservation</button>
        <p id="statusText" class="mt-3 text-danger"></p>
    </div>

    <!-- Modal til bekræftelse pop vindue -->
    <div class="modal fade" id="bekraeftModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" asp-page-handler="ToggleAvailability">
                    <input type="hidden" name="id" value="@room.Id" />

                    @* inputfeltet for navn kan ses men kun hvis lokalet er ledigt *@
                    @if (room.IsAvailable)
                    {
                        <input type="text" name="reservedBy" placeholder="Dit navn" required class="name-input" />
                        <input type="text" name="reservedBy" placeholder="Dato" required class="date-input" />
                        <input type="text" name="reservedBy" placeholder="Tid" required class="Time-input" />
                    }

                    <button type="submit" class="status-btn @(room.IsAvailable ? "available" : "booked")">
                        @(room.IsAvailable ? "Reserver" : "Annuller")
                    </button>
                </form>
                <div class="modal-header">
                    <h5 class="modal-title">Bekræft Reservation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Luk"></button>
                </div>
                <div class="modal-body">
                    Er du sikker på, at du vil reservere Mødelokale 6?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuller</button>
                    <button type="button" class="btn btn-primary" id="bekraeftKnap">Bekræft</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


